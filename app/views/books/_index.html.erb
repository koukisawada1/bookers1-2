			<h2>Books</h2>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% model.each do |book| %>
					<tr>
						<td>
							<%= link_to (book.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, size: "100x100", fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
						<td>
							<% if book.favorited_by?(current_user) %>
								<%= link_to book_favorites_path(book.id), method: :delete do %>
									<span class="glyphicon glyphicon-heart"><%= book.favorites.count%></span>
								<% end %>
							<% else %>
								<%= link_to book_favorites_path(book.id), method: :post do %>
									<span class="glyphicon glyphicon-heart-empty"><%= book.favorites.count %></span>
								<% end %>
							<% end %>
						</td>
						<td>コメント数<%= book.book_comments.count %></td>
					</tr>
					<% end %>
				</tbody>
			</table>